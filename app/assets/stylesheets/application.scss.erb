@import "bootstrap";

#home-container {
  width: 100%;
  height: 91.6vh;
  padding-left: 0;
  padding-right: 0;
  background-image: url(<%=asset_path"alexandre-debieve-FO7JIlwjOtU-unsplash.jpg"%>);
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

.jumbotron {
  background-color: white;
  margin-bottom: 0;
}

#home-div {
  width: 100%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  margin: auto 0;
}

.article {
  margin-bottom: 4rem;
}

.article-image-index {
  max-width: 100%;
}

.acticle-author-index {
  color: #999;
}
