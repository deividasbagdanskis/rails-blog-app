<%= form_with model: [ @article, @article.comments.build ], class: "mb-3" do |form| %>
  <% if flash[:error] %>
    <div id="error_explanation" class="alert-danger py-2 px-3 mb-2">
      <h4>
        <%= pluralize(flash[:error]["body"].count, "error") %> prohibited
        this comment from being saved:
      </h4>
      <ul class="my-0">
        <% flash[:error]["body"].each do |msg| %>
          <li><%= "comment #{msg}" %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :body, "Add a comment", class: "lead" %><br>
    <%= form.text_area :body, class: "form-control" %>
  </div>
  <%= form.submit "Submit", class: "btn btn-primary"%>
<% end %>
