<!DOCTYPE html>
<html>
  <head>
    <title>RailsBlogApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
      <%= link_to "Tech blog", "/", class: "navbar-brand"%>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <%= link_to "Home", "/", class: "nav-link"%>
          </li>
          <li class="nav-item">
            <%= link_to "Articles", "/articles", class: "nav-link"%>
          </li>
          <li class="nav-item">
            <%= link_to "About", "/about", class: "nav-link"%>
          </li>
        </ul>
        <% if current_user %>
          <p class="mx-3 my-auto"><%= current_user_username %></p>
          <%= link_to "Log Out", logout_path, class: "btn btn-outline-primary" %>
        <% else %>
          <%= link_to "Register", register_path, class: "btn btn-outline-primary mr-3" %>
          <%= link_to "Login", login_path, class: "btn btn-outline-primary" %>
        <% end %>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
